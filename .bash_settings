set -o vi

alias ll="ls -l"
alias la="ls -a"

alias vim="nvim"

# add open alias
alias open="xdg-open &> /dev/null"

# add ssh key to keychain
eval $(keychain --eval --quiet ~/.ssh/mantiquillal)

# add autoremove alias
if [ eval `type pacman &>/dev/null` ]; then
  alias autoremove="sudo pacman -Rns $(pacman -Qdtq)"
fi
